<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/upgrade_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/upgrade_title_img"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:src="@drawable/title_back_arrow" />

        <TextView
            android:id="@+id/upgrade_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/upgrade_title_img"
            android:text="版本"
            android:textColor="@android:color/white"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/upgrade_app_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/upgrade_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/upgrade_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/upgrade_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/app_name"
        android:textColor="@color/gray_aa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/upgrade_app_version"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/upgrade_check_version"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_recycler_item"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="检测新版本"
            android:textColor="@color/gray_2e" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="软件仅限于个人学习@957339173"
        android:textColor="@color/gray_aa" />
</RelativeLayout>