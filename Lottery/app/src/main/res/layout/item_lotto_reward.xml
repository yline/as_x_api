<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_lotto_reward_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:minHeight="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_lotto_reward_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="奖项"
            android:textSize="12dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_e6" />

        <TextView
            android:id="@+id/item_lotto_reward_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="中奖数量"
            android:textSize="12dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_e6" />

        <TextView
            android:id="@+id/item_lotto_reward_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="中奖金额(元)"
            android:textSize="12dp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_e6" />

        <TextView
            android:id="@+id/item_lotto_reward_condition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="中奖条件"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/item_lotto_reward_container"
        android:background="@color/gray_e6" />
</RelativeLayout>


